	keywords = {Humans, Adult, Female, Male, Middle Aged, Young Adult, *Reward, Cross-Over Studies, Double-Blind Method, *Punishment, *Reversal Learning, Dopamine/biosynthesis/*metabolism, Phenylalanine/deficiency, Sex Factors, Tyrosine/deficiency},

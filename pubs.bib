	keywords = {Humans, Adult, Female, Male, Surveys and Questionnaires, Cognition, Young Adult, *Affect, Anxiety/*psychology, Reaction Time, *Memory, Decision Making, *Facial Expression, Anxiety Disorders/*psychology, Emotions, Gambling, Memory, Short-Term, Quantitative Trait, Heritable, Stress, Psychological},

	keywords = {Humans, anxiety, *Affect, Bias, *Punishment/psychology, *Reward, Affective bias, Anxiety/*psychology, Healthy Volunteers/*psychology, magnitude, Role, two-alternative forced choice, valence},
	pages = {633--642},
}

@article{colloca_when_2019,

	note = {Place: England},
	keywords = {Humans, psychiatry, Anxiety Disorders/diagnostic imaging/*physiopathology/psychology, Anxiety/diagnostic imaging/*physiopathology/psychology, Brain Mapping, Fear/psychology, Nerve Net/diagnostic imaging/*physiopathology, psychology, experimental},
	pages = {1353--1360},
}

@article{grillon_modeling_2019,

	note = {Place: United States},
	keywords = {Depression, Humans, Computational psychiatry, Individual differences, Cognition, Animals, Anxiety, *Anxiety Disorders, *Affect, Bias, Negative affective bias, Online testing, Self Report, Structural equation modeling},
	pages = {201--209},
}


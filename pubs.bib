	pmcid = {PMC3677215},
	note = {Place: United States},
	keywords = {Humans, Adult, Female, Male, Magnetic Resonance Imaging, Bias, Affect/drug effects/physiology, Affective Symptoms, Amygdala/*metabolism/physiopathology, Anxiety/metabolism/physiopathology, Cross-Over Studies, Depression/metabolism/physiopathology, Double-Blind Method, Emotions/drug effects/physiology, Image Interpretation, Computer-Assisted, Neural Pathways/*metabolism/physiopathology, Prefrontal Cortex/*metabolism/physiopathology, Serotonin Receptor Agonists/pharmacology, Serotonin/*metabolism, Tryptophan/pharmacology},
	pages = {217--223},
